doctype html
html(lang="en")
  head
    base(href=httpRoot)

    block meta
        include meta.pug

    block styles
        link(href=require("noscript.css") rel="stylesheet")
        link(href=require("vendor.css") rel="stylesheet")
        link(href=require("main.css") rel="stylesheet")
        style#theme

  body(class=extraBodyClass)
    block header
        include noscript_header.pug
        include noscript_languages.pug

    block content
        #root

    block footer
        include noscript_footer.pug
