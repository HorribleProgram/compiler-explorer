doctype html
html(lang="en")
  head
    base(href=httpRoot)

    block meta
        include meta.pug

    block styles
        link(href=require("vendor.css") rel="stylesheet")
        link(href=require("main.css") rel="stylesheet")
        style#theme

  body(class=extraBodyClass)
    block content
        #root
            include compiler.pug
